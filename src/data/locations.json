---
layout: null
---
[
  {% for location in site.locations %}
  {
    "title": "{{ location.title | xml_escape }}",
    "label": "{{ location.label | xml_escape }}",
    "radius": 15,
    "fillKey": "locationPin",
    "phone": "{{ location.phone | xml_escape }}",
    "email": "{{ location.email | xml_escape }}",
    "latitude": "{{ location.latitude }}",
    "longitude": "{{ location.longitude | xml_escape }}",
    "address": "{{ location.address | xml_escape }}",
    "image": "{{ location.featured_image | xml_escape }}",
    "url": "/locations/{{ location.title | slugify | xml_escape }}"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]